<Alloy>
    <Window title="Alert Dialog">
        <Button class="actionButton" title="Show Alert Dialog" onClick="showAlertDialog" />
        <AlertDialog id="alert" title="Logout" message="Do you really want to log-out?" onClick="alertDialogClicked">
            <ButtonNames>
                <ButtonName>Confirm</ButtonName>
                <ButtonName>Delete</ButtonName>
                <!--More than two buttons on an dialog causes an error on Windows Mobile-->
                <ButtonName platform="!windows">Cancel</ButtonName>
            </ButtonNames>
        </AlertDialog>
    </Window>
</Alloy>
